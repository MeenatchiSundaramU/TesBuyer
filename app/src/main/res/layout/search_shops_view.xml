<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:id="@+id/flesh_image"
        android:layout_centerVertical="true"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorPrimary"/>
    <RelativeLayout
        android:layout_toRightOf="@+id/flesh_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <LinearLayout
            android:id="@+id/shops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name:"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/shop_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:text="Mano"
        android:id="@+id/shopname"
        android:layout_toRightOf="@+id/shop_name"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/shops"
            android:id="@+id/owner"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner Name: "
                android:layout_marginTop="13dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/owner_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Meenatchi Sundaram U"
        android:layout_below="@+id/shopname"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"
        android:id="@+id/ownername"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City: "
                android:layout_marginTop="13dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/city_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Tirunelveli"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/ownername"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/city"/>
    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>